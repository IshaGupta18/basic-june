<h1> Edit User Profile </h1>
<%= form_for @user do |f| %>
	<%= f.label :email %>
	<%= f.email_field :email %>
	<br>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :age %>
	<%= f.number_field :age %>
	<br>
	<%= f.submit %>

<% end %>
<%=link_to 'Delete Account',@user, data: {:confirm=> 'Are you sure?'}, :method=> :delete %>
